{% extends 'base.html.twig' %}

{% block body_id 'login' %}

{% block main %}
    {% if error %}
        <div class="alert alert-danger">
            {{ error.messageKey|trans(error.messageData, 'security') }}
        </div>
    {% endif %}

    <div class="row">
        <div class="col-sm-5">
            <div class="well">
                <form action="{{ path('security_login_check') }}" method="post">
                    <fieldset>
                        <legend><i class="fa fa-lock"></i> Giriş</legend>
                        <div class="form-group">
                            <label for="username">Kullanıcı adı</label>
                            <input type="text" id="username" name="_username" value="{{ last_username }}" class="form-control"/>
                        </div>
                        <div class="form-group">
                            <label for="password">Şifre</label>
                            <input type="password" id="password" name="_password" class="form-control" />
                        </div>
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}"/>
                        <button type="submit" class="btn btn-primary">
                            <i class="fa fa-sign-in"></i> Giriş Yap
                        </button>
                    </fieldset>
                </form>
            </div>
        </div>

        <div id="login-help" class="col-sm-7">
            <h3>
                <i class="fa fa-long-arrow-left"></i>
                Kullanıcı Giriş
            </h3>

            <table class="table table-striped table-bordered table-hover">
                <thead>
                <tr>
                    <th>Kullanıcı adı</th>
                    <th>Şifre</th>
                    <th>Rol</th>
                </tr>
                </thead>
                <tbody>
                <tr>
                    <td>alisan_user</td>
                    <td>**alisan_user**</td>
                    <td><code>ROLE_USER</code> (Kullanıcı)</td>
                </tr>
                <tr>
                    <td>alisan_admin</td>
                    <td>**alisan_admin**</td>
                    <td><code>ROLE_ADMIN</code> (Yönetici)</td>
                </tr>
                </tbody>
            </table>


        </div>
    </div>
{% endblock %}
{% block sidebar %}

    {{ parent() }}


{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script>
        $(document).ready(function() {
            $('#username').val('alisan_user');
            $('#password').val('**alisan_user**');
        });
    </script>
{% endblock %}