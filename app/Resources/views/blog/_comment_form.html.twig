{{ form_start(form, { method: 'POST', action: path('comment_new', { 'postSlug': post.slug }) }) }}
<fieldset>
    <legend>Yorum Ekle</legend>

    {{ form_errors(form) }}

    <div class="form-group {% if not form.body.vars.valid %}has-error{% endif %}">
        {{ form_label(form.body, 'İçerik', { label_attr: { class: 'hidden' }}) }}

        {{ form_errors(form.body) }}

        {{ form_widget(form.body, { attr: { rows: 10 } }) }}
    </div>

    <div class="form-group">
        <button class="btn btn-primary pull-right" type="submit">Yayınla</button>
    </div>
</fieldset>
{{ form_end(form) }}